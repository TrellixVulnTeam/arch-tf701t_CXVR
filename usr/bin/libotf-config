#!/bin/sh
# libotf-config -- helper script for libotf.
# Copyright (C) 2003, 2004
#   National Institute of Advanced Industrial Science and Technology (AIST)
#   Registration Number H15PRO167
# See the end for copying conditions.

prefix=/usr
exec_prefix=${prefix}

help ()
{
  echo "Usage: otflib-config [--version | --libs | --cflags ]"
}

if test $# -eq 0; then
  help 1>&2
  exit 0
fi

case $1 in
--version)
  echo "0.9.13";;

--libs)
  if test "${exec_prefix}/lib" != "/usr/lib"; then
    echo "-lfreetype -lz -lbz2 -lpng16 -lharfbuzz -L${exec_prefix}/lib -lotf"
  else
    echo "-lfreetype -lz -lbz2 -lpng16 -lharfbuzz -lotf"
  fi;;

--cflags)
  if test "${prefix}/include" != "/usr/include"; then
    echo "-I/usr/include/freetype2 -I${prefix}/include"
  else
    echo "-I/usr/include/freetype2"
  fi;;

*)
    help
    exit 1;;
esac

